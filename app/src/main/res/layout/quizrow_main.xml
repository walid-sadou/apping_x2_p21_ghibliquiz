<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/genderimage" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/nametextview" app:layout_constraintEnd_toStartOf="@+id/nametextview"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:text="name"
            android:layout_width="256dp"
            android:layout_height="71dp"
            android:id="@+id/nametextview" app:layout_constraintStart_toEndOf="@+id/genderimage"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/agetextview"/>
    <TextView
            android:text="Age"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:id="@+id/agetextview" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/nametextview"/>
</android.support.constraint.ConstraintLayout>